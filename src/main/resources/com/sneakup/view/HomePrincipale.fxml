<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sneakup.view.HomePrincipaleGUIController">
    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="70.0" spacing="20.0" style="-fx-background-color: #ff0000; -fx-padding: 0 20 0 20;">
            <children>
                <Label text="SneakUp" textFill="WHITE" style="-fx-font-weight: bold; -fx-font-size: 20;" />

                <HBox alignment="CENTER" spacing="40.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Button text="Home" textFill="WHITE" style="-fx-background-color: transparent; -fx-font-size: 16;" />
                        <Button text="Carrello" textFill="WHITE" style="-fx-background-color: transparent; -fx-font-size: 16;" onAction="#vaiAlCarrello" />
                        <Button text="Preferiti" textFill="WHITE" style="-fx-background-color: transparent; -fx-font-size: 16;" />
                    </children>
                </HBox>

                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <ImageView fitHeight="25.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                            <image><Image url="/images/Bandiera 1.png" /></image>
                        </ImageView>

                        <Label fx:id="labelSaluto" text="Ospite" textFill="WHITE" style="-fx-font-weight: bold;" />

                        <Button fx:id="btnLogin" text="LOGIN" onAction="#vaiAlLogin" style="-fx-background-color: white; -fx-text-fill: black; -fx-font-weight: bold;" />

                        <ImageView fx:id="iconaAccount" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" visible="false">
                            <image><Image url="/images/pngegg.png" /></image>
                        </ImageView>
                    </children>
                </HBox>
            </children>
        </HBox>

        <VBox alignment="CENTER" spacing="40.0" VBox.vgrow="ALWAYS" style="-fx-background-color: white;">
            <padding><Insets top="20" /></padding>
            <Label text="HOME PAGE" style="-fx-font-size: 32; -fx-font-weight: bold;" />

            <HBox alignment="CENTER" spacing="10">
                <TextField promptText="Cerca..." prefWidth="400.0" style="-fx-background-radius: 20;" />
                <Button style="-fx-background-color: #ff0000; -fx-background-radius: 20;" text="ðŸ”" textFill="WHITE" />
            </HBox>

            <HBox alignment="CENTER" spacing="50.0">
                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" onMouseClicked="#apriCatalogoNike">
                    <image><Image url="/images/logo_nike.png" /></image>
                </ImageView>
                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" onMouseClicked="#apriCatalogoAdidas">
                    <image><Image url="/images/logo_adidas.png" /></image>
                </ImageView>
            </HBox>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" onMouseClicked="#apriCatalogoPuma">
                <image><Image url="/images/logo_puma.png" /></image>
            </ImageView>
        </VBox>
    </children>
</VBox>