<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sneakup.view.VisualizzaCatalogoGUIController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Catalogo SneakUp (Venditore)" textFill="#2a2a2a">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <TableView fx:id="tabellaScarpe" prefHeight="400.0" prefWidth="650.0">
        <columns>
            <TableColumn prefWidth="150.0" text="Modello">
                <cellValueFactory><PropertyValueFactory property="modello" /></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="100.0" text="Marca">
                <cellValueFactory><PropertyValueFactory property="marca" /></cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="100.0" text="Categoria">
                <cellValueFactory><PropertyValueFactory property="categoria" /></cellValueFactory>
            </TableColumn>
            <TableColumn text="Taglia">
                <cellValueFactory><PropertyValueFactory property="taglia" /></cellValueFactory>
            </TableColumn>
            <TableColumn text="Prezzo (€)">
                <cellValueFactory><PropertyValueFactory property="prezzo" /></cellValueFactory>
            </TableColumn>
            <TableColumn text="Q.tà">
                <cellValueFactory><PropertyValueFactory property="quantitaDisponibile" /></cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="colonnaAzioni" prefWidth="100.0" text="Azioni" />
        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="20.0">
        <Button onAction="#handleAggiorna" style="-fx-background-color: #007bff; -fx-text-fill: white;" text="Aggiorna Lista" />

        <Button onAction="#tornaAlMenu" style="-fx-background-color: #6c757d; -fx-text-fill: white;" text="Torna al Menu" />
    </HBox>
</VBox>