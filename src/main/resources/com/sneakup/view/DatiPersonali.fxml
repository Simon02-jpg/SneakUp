                        <VBox maxWidth="800.0" alignment="CENTER" spacing="10.0" style="-fx-border-color: #ffcccc; -fx-background-color: #fff5f5; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">
                            <Label text="Zona Pericolo" textFill="#dc3545" style="-fx-font-weight: bold;" />
                            <Button text="ELIMINA PROFILO" onAction="#handleEliminaProfilo"
