                        </VBox>

                        <VBox maxWidth="800.0" spacing="15.0" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5); -fx-border-color: #eeeeee; -fx-border-radius: 15;">
