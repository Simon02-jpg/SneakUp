<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: white;" stylesheets="@/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sneakup.view.gui.cliente.SelezioneCategoriaGUIController">

    <top>
        <VBox style="-fx-background-color: #ff0000;">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="85.0" spacing="20.0" style="-fx-padding: 0 30 0 30;">
                    <children>
                        <HBox alignment="CENTER_LEFT" onMouseClicked="#handleReloadHomeMouse" spacing="0" style="-fx-cursor: hand;">
                            <children>
                                <Label text="Sneak" textFill="WHITE"><font><Font name="System Bold" size="36.0" /></font></Label>
                                <Label text="Up" textFill="BLACK"><font><Font name="System Bold" size="36.0" /></font></Label>
                            </children>
                        </HBox>
                        <Region HBox.hgrow="ALWAYS" />
                        <HBox alignment="CENTER" onMouseExited="#nascondiBarra" spacing="35.0">
                            <children>
                                <Button fx:id="btnHome" onAction="#handleReloadHome" onMouseEntered="#mostraEmuoviBarra" styleClass="nav-button" text="Home" />
                                <Button fx:id="btnCarrello" onAction="#handleCarrello" onMouseEntered="#mostraEmuoviBarra" styleClass="nav-button" text="Carrello" />
                                <Button fx:id="btnStato" onAction="#handleStatoOrdine" onMouseEntered="#mostraEmuoviBarra" styleClass="nav-button" text="Stato ordine" />
                                <Button fx:id="btnPreferiti" onAction="#handlePreferiti" onMouseEntered="#mostraEmuoviBarra" styleClass="nav-button" text="Preferiti" />
                            </children>
                        </HBox>
                        <Region HBox.hgrow="ALWAYS" />
                        <HBox alignment="CENTER" spacing="25.0">
                            <children>
                                <ImageView fitHeight="45.0" fitWidth="70.0" onMouseEntered="#iconaEntra" onMouseExited="#iconaEsce" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
                                    <image><Image url="@/images/Bandiera 1.png" /></image>
                                </ImageView>
                                <StackPane>
                                    <children>
                                        <Button fx:id="btnLogin" onAction="#handleLoginGenerico" onMouseEntered="#iconaEntra" onMouseExited="#iconaEsce" styleClass="login-button" text="Login" />
                                        <Label fx:id="lblUser" managed="false" onMouseClicked="#handleVaiAreaPersonale" onMouseEntered="#sottolineaUser" onMouseExited="#ripristinaUser" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-cursor: hand;" textFill="WHITE" visible="false" />
                                    </children>
                                </StackPane>
                            </children>
                        </HBox>
                    </children>
                </HBox>
                <Pane prefHeight="8.0">
                    <VBox.margin><Insets bottom="5.0" top="-15.0" /></VBox.margin>
                    <children>
                        <Region fx:id="barraAnimata" opacity="0.0" prefHeight="4.0" style="-fx-background-color: white; -fx-background-radius: 2;" />
                    </children>
                </Pane>
            </children>
        </VBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="30.0">
            <padding><Insets bottom="30" left="50" right="50" top="30" /></padding>
            <children>

                <HBox alignment="CENTER_LEFT" maxWidth="1000.0">
                    <Button onAction="#handleIndietro" text="â† Torna indietro"
                            style="-fx-background-color: #f5f5f5; -fx-text-fill: black; -fx-background-radius: 30; -fx-cursor: hand; -fx-padding: 10 20; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 3, 0, 0, 1);" />
                </HBox>

                <VBox alignment="CENTER" spacing="5.0">
                    <Label fx:id="lblBrandTitolo" text="BRAND" textFill="BLACK">
                        <font><Font name="System Bold" size="48.0" /></font>
                    </Label>
                    <Label fx:id="lblGenere" text="GENERE" textFill="#666666">
                        <font><Font size="24.0" /></font>
                    </Label>
                </VBox>

                <HBox alignment="CENTER" spacing="40.0" style="-fx-padding: 30;">
                    <children>
                        <Button onAction="#handleCategoria" onMouseEntered="#animazioneEntraBottone" onMouseExited="#animazioneEsceBottone"
                                text="Corsa" prefWidth="280.0" prefHeight="350.0"
                                style="-fx-background-color: #ff0000; -fx-text-fill: white; -fx-border-color: #cc0000; -fx-border-width: 2; -fx-border-radius: 20; -fx-background-radius: 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 15, 0, 0, 8); -fx-content-display: TOP; -fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 20;">
                            <graphic>
                                <ImageView fitHeight="160.0" fitWidth="220.0" pickOnBounds="true" preserveRatio="true">
                                    <image><Image url="@/images/scarpa_calcio.png" /></image>
                                </ImageView>
                            </graphic>
                        </Button>

                        <Button onAction="#handleCategoria" onMouseEntered="#animazioneEntraBottone" onMouseExited="#animazioneEsceBottone"
                                text="Basket" prefWidth="280.0" prefHeight="350.0"
                                style="-fx-background-color: #ff0000; -fx-text-fill: white; -fx-border-color: #cc0000; -fx-border-width: 2; -fx-border-radius: 20; -fx-background-radius: 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 15, 0, 0, 8); -fx-content-display: TOP; -fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 20;">
                            <graphic>
                                <ImageView fitHeight="160.0" fitWidth="220.0" pickOnBounds="true" preserveRatio="true">
                                    <image><Image url="@/images/scarpa_basket.png" /></image>
                                </ImageView>
                            </graphic>
                        </Button>

                        <Button onAction="#handleCategoria" onMouseEntered="#animazioneEntraBottone" onMouseExited="#animazioneEsceBottone"
                                text="Calcio" prefWidth="280.0" prefHeight="350.0"
                                style="-fx-background-color: #ff0000; -fx-text-fill: white; -fx-border-color: #cc0000; -fx-border-width: 2; -fx-border-radius: 20; -fx-background-radius: 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 15, 0, 0, 8); -fx-content-display: TOP; -fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 20;">
                            <graphic>
                                <ImageView fitHeight="160.0" fitWidth="220.0" pickOnBounds="true" preserveRatio="true">
                                    <image><Image url="@/images/scarpa_corsa.png" /></image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </HBox>

            </children>
        </VBox>
    </center>
</BorderPane>