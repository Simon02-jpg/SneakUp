<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sneakup.view.gui.common.LoginGUIController">
    <children>

        <VBox style="-fx-background-color: #ff0000;">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="80.0" style="-fx-padding: 0 30 0 30;">
                    <children>
                        <HBox alignment="CENTER_LEFT" onMouseClicked="#handleReloadHome" spacing="2.0" style="-fx-cursor: hand;">
                            <children>
                                <Label text="Sneak" textFill="WHITE"><font><Font name="System Bold" size="28.0" /></font></Label>
                                <Label text="Up" textFill="BLACK"><font><Font name="System Bold" size="28.0" /></font></Label>
                            </children>
                        </HBox>

                        <Region HBox.hgrow="ALWAYS" />

                        <HBox alignment="CENTER" spacing="10.0" onMouseExited="#nascondiBarra">
                            <children>
                                <Button fx:id="btnHome" text="Home" onAction="#handleReloadHome" onMouseEntered="#mostraEmuoviBarra"
                                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18; -fx-cursor: hand;" />

                                <Button fx:id="btnCarrello" text="Carrello" onAction="#handleCarrello" onMouseEntered="#mostraEmuoviBarra"
                                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18; -fx-cursor: hand;" />

                                <Button fx:id="btnStato" text="Stato ordine" onAction="#handleStatoOrdine" onMouseEntered="#mostraEmuoviBarra"
                                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18; -fx-cursor: hand;" />

                                <Button fx:id="btnPreferiti" text="Preferiti" onAction="#handlePreferiti" onMouseEntered="#mostraEmuoviBarra"
                                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18; -fx-cursor: hand;" />
                            </children>
                        </HBox>

                        <Region HBox.hgrow="ALWAYS" />

                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <ImageView fitHeight="50.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true"
                                           onMouseEntered="#iconaEntra"
                                           onMouseExited="#iconaEsce"
                                           style="-fx-cursor: hand;">
                                    <image><Image url="/images/Bandiera 1.png" /></image>
                                </ImageView>

                                <Button text="Login"
                                        onAction="#handleLoginGenerico"
                                        onMouseEntered="#iconaEntra"
                                        onMouseExited="#iconaEsce"
                                        style="-fx-background-color: transparent;
                                               -fx-text-fill: white;
                                               -fx-font-weight: bold;
                                               -fx-font-size: 16;
                                               -fx-border-color: white;
                                               -fx-border-width: 2;
                                               -fx-border-radius: 10;
                                               -fx-padding: 5 15 5 15;
                                               -fx-cursor: hand;" />
                            </children>
                        </HBox>
                    </children>
                </HBox>

                <Pane prefHeight="5.0" style="-fx-background-color: #ff0000;">
                    <children>
                        <Region fx:id="barraAnimata" layoutX="0" opacity="0.0" prefHeight="4.0" prefWidth="60.0" style="-fx-background-color: white;" />
                    </children>
                </Pane>
            </children>
        </VBox>

        <VBox alignment="CENTER" spacing="30.0" VBox.vgrow="ALWAYS">
            <children>
                <Label text="ACCEDI AL TUO ACCOUNT" textFill="#222222">
                    <font><Font name="System Bold" size="24.0" /></font>
                </Label>

                <VBox maxWidth="500.0" spacing="15.0" style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 20, 0, 0, 10);">
                    <children>
                        <Label text="Username" style="-fx-font-weight: bold;" />
                        <TextField fx:id="usernameField" promptText="Inserisci username" style="-fx-pref-height: 45; -fx-background-radius: 8;" />

                        <Label text="Password" style="-fx-font-weight: bold;" />
                        <PasswordField fx:id="passwordField" promptText="Inserisci Password" style="-fx-pref-height: 45; -fx-background-radius: 8;" />

                        <Label text="hai dimenticato la password?" textFill="RED" style="-fx-cursor: hand;" onMouseClicked="#apriRecuperoPassword" />

                        <Button text="ACCEDI"
                                onAction="#handleLogin"
                                onMouseEntered="#animazioneEntraBottone"
                                onMouseExited="#animazioneEsceBottone"
                                maxWidth="Infinity"
                                style="-fx-background-color: #ff0000; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-pref-height: 45; -fx-background-radius: 8; -fx-cursor: hand;">
                            <VBox.margin><Insets top="10.0" /></VBox.margin>
                        </Button>

                        <Button text="Accedi con Google"
                                onMouseEntered="#animazioneEntraBottone"
                                onMouseExited="#animazioneEsceBottone"
                                maxWidth="Infinity"
                                style="-fx-background-color: white; -fx-border-color: #dddddd; -fx-border-radius: 8; -fx-text-fill: #444444; -fx-font-size: 14; -fx-pref-height: 45; -fx-background-radius: 8; -fx-cursor: hand;">
                            <graphic>
                                <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                                </ImageView>
                            </graphic>
                        </Button>

                        <HBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Label text="non hai un account?" textFill="BLACK" />
                                <Label text="registrati ora" textFill="RED" style="-fx-font-weight: bold; -fx-cursor: hand;" onMouseClicked="#apriRegistrazione" />
                            </children>
                            <VBox.margin><Insets top="15.0" /></VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</VBox>