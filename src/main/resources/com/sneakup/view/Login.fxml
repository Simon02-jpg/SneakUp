<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sneakup.view.LoginGUIController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <Label text="SNEAKUP" textFill="#2a2a2a">
        <font>
            <Font name="System Bold" size="36.0" />
        </font>
    </Label>

    <Label text="Accedi al tuo account" textFill="#888888">
        <font>
            <Font size="14.0" />
        </font>
    </Label>

    <VBox spacing="5.0" alignment="CENTER_LEFT" maxWidth="300.0">
        <Label text="Username" />
        <TextField fx:id="usernameField" promptText="Es. user (o admin)" />
    </VBox>

    <VBox spacing="5.0" alignment="CENTER_LEFT" maxWidth="300.0">
        <Label text="Password" />
        <PasswordField fx:id="passwordField" promptText="Password" />
    </VBox>

    <Button onAction="#handleLogin" defaultButton="true" prefHeight="40.0" prefWidth="300.0" style="-fx-background-color: #000000; -fx-text-fill: white;" text="ACCEDI">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
    </Button>

    <Label fx:id="erroreLabel" textFill="red" visible="false" />
</VBox>