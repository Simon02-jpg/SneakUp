    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <Label text="Catalogo Scarpe" textFill="#2a2a2a">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <VBox HBox.hgrow="ALWAYS" />

        <Button onAction="#vaiAlCarrello" style="-fx-background-color: #ffc107; -fx-text-fill: black;" text="ðŸ›’ Vai al Carrello">
