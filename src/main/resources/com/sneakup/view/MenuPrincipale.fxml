<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sneakup.view.MenuGUIController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <Label text="AREA VENDITORE" textFill="#dc3545">
        <font>
            <Font name="System Bold" size="36.0" />
        </font>
    </Label>

    <Label text="Gestione Magazzino" textFill="#666666">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <VBox prefHeight="30.0" />

    <Button onAction="#vaiAInserisci" prefHeight="50.0" prefWidth="250.0" style="-fx-background-color: #007bff; -fx-text-fill: white;" text="INSERISCI NUOVA SCARPA">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
    </Button>

    <Button onAction="#vaiACatalogo" prefHeight="50.0" prefWidth="250.0" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="VISUALIZZA CATALOGO">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
    </Button>

    <Button onAction="#esci" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #6c757d; -fx-text-fill: white;" text="ESCI">
        <font>
            <Font size="14.0" />
        </font>
    </Button>
</VBox>